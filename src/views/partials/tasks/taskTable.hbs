<table>
    <thead>
        <tr>
            <th>No.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
                {{#if done}}
                    <a href="/toggleDone/{{_id}}">Undone</a>
                {{else}}
                    <a href="/toggleDone/{{_id}}">Done</a>
                {{/if}}

                <a href="/delete/{{_id}}">Delete</a>
                
                <a href="/edit/{{_id}}">Update<a>   
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>